.SideBar
  .SideBar__userName
    .SideBar__userName__sideBox
      %h3.SideBar__userName__sideBox__name 
        = current_user.name
      %ul.SideBar__userName__sideBox__iconBox
        %li.SideBar__userName__sideBox__iconBox__pencil
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.SideBar__userName__sideBox__iconBox__gear
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .SideBar__groupList
    - current_user.groups.each do |group|
      .SideBar__groupList__groupBox
        = link_to group_messages_path(group) do
          .SideBar__groupList__groupBox__groupName 
            = group.name
          .SideBar__groupList__groupBox__latestMessage
            = group.show_last_message